<MainWindow>:
    order_texbox: order_number
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1,1,1, .80
            Rectangle:
                pos: root.pos
                size: root.size
        orientation: 'vertical'
        color: (1,1,1,0)
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0,0,0, 0.75
                    Rectangle:
                        pos: self.pos
                        size: self.size
                orientation: 'horizontal'
                size_hint: 1, .18
                Label:
                    text: '[b]{}[/b]'.format(root.main_app_name_label)
                    markup: 'True'
                    font_size: self.parent.width/20
                Label:
                    size_hint: 0.3 , 1
                Image:
                    source: 'logo.png'
                    size_hint: 0.5 , 1
                Label:
                    size_hint: .1, 1
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: .9, 1
                    Label:
                        size_hint: 1, 0.4
                    Label:
                        text: '[b]SCANNED BARCODES[b]'
                        markup: 'True'
                        size_hint: 1, 1.2
                        font_size: self.parent.width/13
                        color: 0, .6156, .48235
                    Label:
                        size_hint: 1, 0.2
                    Label:
                        text: root.barcode_label_1
                        color: 0, 0, 0, 1
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_2
                        color: 0, 0, 0, 0.95
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_3
                        color: 0, 0, 0, 0.9
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_4
                        color: 0, 0, 0, 0.85
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_5
                        color: 0, 0, 0, 0.8
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_6
                        color: 0, 0, 0, 0.75
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_7
                        color: 0, 0, 0, 0.7
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_8
                        color: 0, 0, 0, 0.65
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_9
                        color: 0, 0, 0, 0.6
                        font_size: self.parent.width/19
                    Label:
                        text: root.barcode_label_10
                        color: 0, 0, 0, 0.55
                        font_size: self.parent.width/19
                    Label:
                        size_hint: 1, .3
                    Label:
                        text: '[b]{}[b]'.format(root.order_detail_label)
                        markup: 'True'
                        color: 1,0,0, .5
                        font_size: self.parent.width/12
                    Label:
                        size_hint: 1, .3
                    Label:
                        size_hint: 1, 0.5
                Label:
                    size_hint: 0.01 , 1
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        size_hint: 1, 0.7
                    Label:
                        text: '[b]{}[/b]'.format(root.last_barcode_label)
                        markup: 'True'
                        color: 1,0,0, .5
                        font_size: self.parent.width/10
                        size_hint: 1 , .6
                    Label:
                        text: '[b]{}[/b]'.format(root.last_time_label)
                        markup: 'True'
                        color: 1,0,0,.6
                        font_size: self.parent.width/10
                        size_hint: 1, 0.5
                        size_hint: 1 , .6
                    Label:
                        text: '[b]{}[/b]'.format(root.status_label)
                        markup: 'True'
                        color: 0,0,0,.7
                        font_size: self.parent.width/12
                        halign: 'center'
                        valign: 'middle'
                        size_hint: 1 , .6
                    Label:
                        text: root.worker_label
                        font_size: self.parent.width/13
                        color: 0, .6156, .48235, 1
                        halign: 'center'
                        valign: 'middle'
                        size_hint: 1 , .6
                    Label:
                        size_hint: 1, .2
                    BoxLayout:
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: 1.2 ,1.1
                            Label:
                                size_hint: 1, 0.4
                            BoxLayout:
                                orientation: 'horizontal'
                                Label:
                                    size_hint: .05 , 1
                                Button:
                                    size_hint: 1.01, 1
                                    text: 'DELETE BOARD'
                                    font_size: self.parent.width/26
                                    text_size: self.parent.width/5, None
                                    halign: 'center'
                                    valign: 'middle'
                                    background_color: 0, .6156, .48235, 1
                                    background_normal: ''
                                    on_press:
                                Label:
                                    size_hint: .1, 1
                                Button:
                                    size_hint: 1, 1
                                    text: root.load_order_button
                                    font_size: self.parent.width/26
                                    text_size: self.parent.width/5, None
                                    halign: 'center'
                                    valign: 'middle'
                                    background_color: 0, .6156, .48235, 1
                                    background_normal: ''
                                    on_press: root.load_order()
                                Label:
                                    size_hint: .1, 1
                                BoxLayout:
                                    orientation: 'vertical'
                                    Label:
                                        size_hint: 1, .5
                                    TextInput:
                                        id: order_number
                                        multiline: False
                                        font_size: self.parent.width/6.5
                                        on_text: root.update_padding(args[0])
                                    Label:
                                        size_hint: 1, .5
                                Label:
                                    size_hint: .05 , 1
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            size_hint: 1, .15
                        BoxLayout:
                            orientation: 'horizontal'
                            Label:
                                size_hint: .05 , 1
                            Button:
                                text: 'SHOW ORDER'
                                font_size: self.parent.width/26
                                text_size: self.parent.width/4  , None
                                halign: 'center'
                                valign: 'middle'
                                background_color: 0, .6156, .48235
                                background_color: 0, .6156, .48235, 1
                                background_normal: ''
                                on_press: root.show_info()
                            Label:
                                size_hint: .1 , 1
                            Button:
                                text: 'SEND  ORDER'
                                font_size: self.parent.width/26
                                text_size: self.parent.width/5, None
                                halign: 'center'
                                valign: 'middle'
                                background_color: 0, .6156, .48235, 1
                                background_normal: ''
                                on_press:
                            Label:
                                size_hint: .1 , 1
                            Button:
                                text: 'EXIT'
                                font_size: self.parent.width/26
                                text_size: self.parent.width/5, None
                                halign: 'center'
                                valign: 'middle'
                                background_color: 0, .6156, .48235, 1
                                background_normal: ''
                                on_press: root.exit_app()
                            Label:
                                size_hint: .05 , 1
                        Label:
                            size_hint: 1, .15
                Label:
                    size_hint: .03, 1

<MessageWindow>:
    message_box: box_message
    size_hint: 0.7, 0.7
    title_align: 'center'
    title: 'ORDER QUANTITY'
    BoxLayout:
        id: box_message
        orientation: 'vertical'

